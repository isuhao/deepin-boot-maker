
Dtk--Widget--DPasswordEdit {
    border-radius: 3;
    background-color: rgba(255, 255, 255, 26);/*use as outside border*/
}

Dtk--Widget--DPasswordEdit[isEchoMode="false"] Dtk--Widget--DImageButton {
    qproperty-normalPic:url(:/images/light/images/password_show_normal.png);
    qproperty-hoverPic:url(:/images/light/images/password_show_hover.png);
    qproperty-pressPic:url(:/images/light/images/password_show_press.png);
}

Dtk--Widget--DPasswordEdit[isEchoMode="true"] Dtk--Widget--DImageButton {
    qproperty-normalPic:url(:/images/light/images/password_hide_normal.png);
    qproperty-hoverPic:url(:/images/light/images/password_hide_hover.png);
    qproperty-pressPic:url(:/images/light/images/password_hide_press.png);
}

Dtk--Widget--DPasswordEdit QLineEdit {
    border:none;
    background:transparent;
    color:white;
}

Dtk--Widget--DPasswordEdit QFrame#DEditInsideFrame {
    background-color: rgba(0, 0, 0, 50);
    border: 1px solid;
    border-radius: 3;
    border-color: black;
}

Dtk--Widget--DPasswordEdit[isAlertMode="true"] QFrame#DEditInsideFrame {
    border-color: #FF8F00;
}
