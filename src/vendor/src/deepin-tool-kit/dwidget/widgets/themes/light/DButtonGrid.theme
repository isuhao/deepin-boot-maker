Dtk--Widget--DButtonGrid {
    background-color: transparent;
    border: none;
}

Dtk--Widget--DButtonGrid QFrame{
    background-color: transparent;
}

Dtk--Widget--DButtonGrid QFrame QPushButton{
    background-color: rgba(0, 0, 0, 0);
    color: #474747;
    border: none;
}

Dtk--Widget--DButtonGrid QFrame QPushButton:hover{
    color: #000000;
}

Dtk--Widget--DButtonGrid QFrame QPushButton:pressed{
    color: white;
}

Dtk--Widget--DButtonGrid QFrame QPushButton:checked{
    color: #2CA7F8;
    font-size: 12px;
    background-color: white;
    border-radius: 3px;
    border: none;
}

QLabel#IconLabel[state = "normal"]{
    border: 1px solid #b4b4b4;
}


QLabel#IconLabel[state = "hover"]{
     border: 1px solid #FFFFFF;
}

QLabel#IconLabel[state = "checked"]{
    border: 1px solid #01BDFF;
}


QLabel#TextLabel[state = "normal"]{
    color: #b4b4b4;
}


QLabel#TextLabel[state = "hover"]{
     color: #FFFFFF;
}

QLabel#TextLabel[state = "checked"]{
    color: #01BDFF;
}
