Dtk--Widget--DButtonList {
    background-color: #ffffff;
    border: none;
}

Dtk--Widget--DButtonList QPushButton:hover{
    color: black;
}

Dtk--Widget--DButtonList QFrame#BorderFrame{
  background-color: transparent;
}

Dtk--Widget--DButtonList QFrame#BorderFrame[state="checked"]{
  background-color: transparent;
}

Dtk--Widget--DButtonList QPushButton{
    background-color: transparent;
    color: #b4b4b4;
    border: none;
    border-radius:3px;
    text-align: left center;
    padding-left: 40px;
}

Dtk--Widget--DButtonList QPushButton:checked{
    background-color: white;
    color: #2CA7F8;
}
